{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "security:openssf-scorecard",
    ":semanticCommitTypeAll(chore)"
  ],
  "description": "Automated dependency updates with security focus",
  "timezone": "America/New_York",
  "schedule": [
    "before 6am on Monday"
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "labels": [
    "dependencies",
    "automated"
  ],
  "assignees": [
    "@Vibe-coding-nvm-delete-repo"
  ],
  "reviewers": [
    "@Vibe-coding-nvm-delete-repo"
  ],
  "packageRules": [
    {
      "description": "Security updates - high priority with auto-merge",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchPackageNames": ["*"],
      "vulnerabilityAlerts": true,
      "labels": ["security", "priority-high"],
      "prPriority": 10,
      "schedule": ["at any time"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "requiredStatusChecks": null
    },
    {
      "description": "Next.js and React ecosystem updates",
      "groupName": "Next.js ecosystem",
      "matchPackageNames": [
        "next",
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
        "eslint-config-next"
      ],
      "labels": ["frontend", "react"],
      "prPriority": 8
    },
    {
      "description": "TypeScript and tooling updates",
      "groupName": "TypeScript tooling",
      "matchPackageNames": [
        "typescript",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "@typescript-eslint/utils",
        "typescript-eslint",
        "tsd"
      ],
      "labels": ["typescript", "tooling"],
      "prPriority": 7
    },
    {
      "description": "ESLint and code quality tools",
      "groupName": "Code quality tools",
      "matchPackageNames": [
        "eslint",
        "prettier",
        "lint-staged",
        "husky",
        "eslint-*",
        "@eslint/*"
      ],
      "labels": ["code-quality", "tooling"],
      "prPriority": 6
    },
    {
      "description": "Testing framework updates",
      "groupName": "Testing tools",
      "matchPackageNames": [
        "jest",
        "@testing-library/*",
        "@types/jest",
        "jest-environment-jsdom"
      ],
      "labels": ["testing", "tooling"],
      "prPriority": 5
    },
    {
      "description": "UI and styling dependencies",
      "groupName": "UI dependencies",
      "matchPackageNames": [
        "@radix-ui/*",
        "lucide-react",
        "tailwindcss",
        "@tailwindcss/*"
      ],
      "labels": ["ui", "styling"],
      "prPriority": 4
    },
    {
      "description": "Build and development tools",
      "groupName": "Build tools",
      "matchDepTypes": ["devDependencies"],
      "excludePackageNames": [
        "next", "react", "react-dom", "typescript", "eslint", "prettier", "jest"
      ],
      "labels": ["build-tools", "devDependencies"],
      "prPriority": 3,
      "schedule": ["before 6am on Monday"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Pin Node.js to LTS versions only",
      "matchDepNames": ["node"],
      "allowedVersions": ">=20.0.0 <21.0.0",
      "labels": ["node", "runtime"]
    },
    {
      "description": "Major version updates - manual review required",
      "matchUpdateTypes": ["major"],
      "labels": ["major-update", "breaking-change"],
      "prPriority": 1,
      "schedule": ["before 6am on first day of month"],
      "minimumReleaseAge": "30 days",
      "automerge": false,
      "requiredStatusChecks": [
        "ci",
        "architecture-guard",
        "required-checks"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on Monday"],
    "automerge": true,
    "automergeType": "pr",
    "labels": ["lockfile-maintenance"]
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ“¦ Dependency Dashboard",
  "dependencyDashboardHeader": "This dashboard shows the status of all dependency updates. Security updates are handled with highest priority and auto-merged when safe.",
  "dependencyDashboardFooter": "Questions? Check the [Renovate documentation](https://docs.renovatebot.com/) or reach out to the development team.",
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"],
    "prPriority": 20
  },
  "osvVulnerabilityAlerts": true,
  "suppressNotifications": ["prIgnoreNotification"],
  "prFooter": "\n\n---\n\nðŸ¤– This PR was automatically generated by Renovate. Questions? Check our [dependency update policy](https://github.com/Vibe-coding-nvm-delete-repo/yt/blob/main/docs/DEPENDENCY_POLICY.md)."
}