#!/bin/sh
# P0 Enforcement: Comprehensive Pre-commit Quality Gate
# This pre-commit hook ensures all code meets quality standards before commit

set -e  # Exit immediately if any command fails

echo "ğŸ” Running comprehensive pre-commit quality checks..."

# 1. Architecture Guards (fail-fast)
echo "ğŸ“ Checking architecture compliance..."
npx --no-install tsx .github/scripts/architecture-guard.ts || {
  echo "âŒ Architecture compliance check failed"
  exit 1
}

# 2. TypeScript Type Checking
echo "ğŸ”§ Running TypeScript type checking..."
npm run typecheck || {
  echo "âŒ TypeScript type checking failed"
  exit 1
}

# 3. Security Audit (high/critical vulnerabilities only)
echo "ğŸ”’ Running security audit..."
npm audit --audit-level=high --production || {
  echo "âš ï¸  High/critical vulnerabilities detected"
  echo "ğŸ’¡ Run 'npm audit fix' to resolve issues"
  exit 1
}

# 4. Lint-staged (ESLint + Prettier on staged files)
echo "âœ¨ Running lint-staged (ESLint + Prettier)..."
npx lint-staged || {
  echo "âŒ Lint-staged check failed"
  exit 1
}

# 5. Type Contract Validation
echo "ğŸ“‹ Validating type contracts..."
npm run type:contracts || {
  echo "âŒ Type contract validation failed"
  exit 1
}

# 6. Bundle Size Check (if build assets exist)
if [ -d ".next" ]; then
  echo "ğŸ“¦ Checking bundle size..."
  node -e "
    const fs = require('fs');
    const path = require('path');
    try {
      const buildManifest = JSON.parse(fs.readFileSync('.next/build-manifest.json'));
      const totalSize = Object.values(buildManifest.pages).flat()
        .reduce((acc, file) => {
          try {
            const filePath = path.join('.next', file);
            return acc + fs.statSync(filePath).size;
          } catch { return acc; }
        }, 0);
      const sizeMB = (totalSize / 1024 / 1024).toFixed(2);
      console.log(\`ğŸ“¦ Total bundle size: \${sizeMB}MB\`);
      if (totalSize > 5 * 1024 * 1024) { // 5MB limit
        console.error('âŒ Bundle size exceeds 5MB limit');
        process.exit(1);
      }
    } catch (e) {
      console.log('âš ï¸  Bundle size check skipped (no build artifacts)');
    }
  "
fi

# 7. Git hooks validation
echo "ğŸ”— Validating git hooks integrity..."
if [ ! -f ".husky/commit-msg" ] || [ ! -x ".husky/commit-msg" ]; then
  echo "âŒ commit-msg hook is missing or not executable"
  exit 1
fi

echo "âœ… All pre-commit checks passed successfully!"
echo "ğŸ“ Ready to commit with confidence"

exit 0